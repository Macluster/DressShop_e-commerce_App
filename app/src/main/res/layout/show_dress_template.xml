<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="280dp"
        app:cardBackgroundColor="#FDEFEF"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/showDressImageImageView"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:scaleType="fitXY"
                android:src="@drawable/dress" />

            <TextView
                android:id="@+id/ShowDressNameTextView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:text="Children Dress"
                android:textSize="17dp" />
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">
                <ImageView

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/rupee"
                    android:scaleType="fitCenter"

                     />

                <TextView
                    android:id="@+id/ShowDressPriceTextView"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"

                    android:text="500"
                    android:textSize="20dp" />

            </LinearLayout>



            <TextView
                android:id="@+id/ShowDressRatingTextView"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="-25dp"

                android:background="@drawable/rounded_corners"
                android:backgroundTint="#F43B86"
                android:gravity="center_horizontal"
                android:text="3.7"
                android:textAlignment="center"
                android:textColor="@color/white"

                android:textSize="17dp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>