<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".DressInfoPagefrag">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/DressInfo_ImageView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"

                    />

                <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:layout_constraintTop_toBottomOf="@id/DressInfo_ImageView"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="20dp"
                    android:elevation="150dp"
                    android:translationZ="10dp"
                    android:backgroundTint="@color/white">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >




                        <TextView
                            android:text="Dress Naame"
                            android:textSize="18dp"
                            android:id="@+id/DressInfoDressName_TextView"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            />
                        <TextView
                            android:text="Men Slim fitted casual"
                            android:textSize="18dp"
                            android:id="@+id/DressInfoDressSmallDrescription_TextView"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginLeft="10dp"
                            app:layout_constraintTop_toBottomOf="@id/DressInfoDressName_TextView"


                            />
                        <ImageView
                            android:id="@+id/DressInfoRupeesImage"
                            android:layout_width="25dp"
                            android:layout_height="23dp"
                            android:src="@drawable/rupee"
                            android:scaleType="fitCenter"
                            app:layout_constraintTop_toBottomOf="@id/DressInfoDressSmallDrescription_TextView"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            />
                        <TextView
                            android:id="@+id/DressInfoPriceTextView"
                            android:text="400"
                            android:textSize="25dp"
                            android:layout_width="100dp"
                            android:layout_height="35dp"
                            app:layout_constraintTop_toBottomOf="@id/DressInfoDressSmallDrescription_TextView"
                            app:layout_constraintLeft_toRightOf="@id/DressInfoRupeesImage"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    app:layout_constraintTop_toBottomOf="@id/DressInfo_ImageView"
                    android:layout_marginTop="170dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="20dp"
                    android:elevation="150dp"
                    android:translationZ="150dp"
                    android:backgroundTint="@color/white"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:text="Select Size"
                            android:textSize="20dp"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            />
                        <TextView
                            android:text="S"
                            android:textColor="@color/white"
                            android:textSize="17dp"
                            android:textAlignment="center"
                            android:layout_width="50dp"
                            android:layout_height="23dp"
                            android:background="@drawable/rounded_corners"
                            android:backgroundTint="@color/black"
                            android:gravity="center_horizontal"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="60dp"/>


                        <TextView
                            android:text="M"
                            android:textColor="@color/white"
                            android:textSize="17dp"
                            android:textAlignment="center"
                            android:layout_width="50dp"
                            android:layout_height="23dp"
                            android:background="@drawable/rounded_corners"
                            android:backgroundTint="@color/black"
                            android:gravity="center_horizontal"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginLeft="85dp"
                            android:layout_marginTop="60dp"/>

                        <TextView
                            android:text="L"
                            android:textColor="@color/white"
                            android:textSize="17dp"
                            android:textAlignment="center"
                            android:layout_width="50dp"
                            android:layout_height="23dp"
                            android:background="@drawable/rounded_corners"
                            android:backgroundTint="@color/black"
                            android:gravity="center_horizontal"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginLeft="150dp"
                            android:layout_marginTop="60dp"/>
                        <TextView
                            android:text="XL"
                            android:textColor="@color/white"
                            android:textSize="17dp"
                            android:textAlignment="center"
                            android:layout_width="50dp"
                            android:layout_height="23dp"
                            android:background="@drawable/rounded_corners"
                            android:backgroundTint="@color/black"
                            android:gravity="center_horizontal"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginLeft="210dp"
                            android:layout_marginTop="60dp"/>

                        <TextView
                            android:text="XXL"
                            android:textColor="@color/white"
                            android:textSize="17dp"
                            android:textAlignment="center"
                            android:layout_width="50dp"
                            android:layout_height="23dp"
                            android:background="@drawable/rounded_corners"
                            android:backgroundTint="@color/black"
                            android:gravity="center_horizontal"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginLeft="270dp"
                            android:layout_marginTop="60dp"/>

                        <TextView
                            android:text="4XL"
                            android:textColor="@color/white"
                            android:textSize="17dp"
                            android:textAlignment="center"
                            android:layout_width="60dp"
                            android:layout_height="23dp"
                            android:background="@drawable/rounded_corners"
                            android:backgroundTint="@color/black"
                            android:gravity="center_horizontal"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="110dp"/>
                        <TextView
                            android:text="5XL"
                            android:textColor="@color/white"
                            android:textSize="17dp"
                            android:textAlignment="center"
                            android:layout_width="60dp"
                            android:layout_height="23dp"
                            android:background="@drawable/rounded_corners"
                            android:backgroundTint="@color/black"
                            android:gravity="center_horizontal"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginLeft="120dp"
                            android:layout_marginTop="110dp"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="20dp"
                    android:translationZ="150dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toBottomOf="@id/DressInfo_ImageView"
                    android:layout_marginTop="350dp"
                    android:background="@color/white"
                    android:elevation="150dp"
                    android:backgroundTint="@color/white"


                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <TextView
                            android:text="Product Details"
                            android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            >
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:text="Pack of :"
                                android:textSize="20dp"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/DressInfoPackInput"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:text="1"
                                android:textSize="20dp"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"/>



                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            >
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:text="Fabric :"
                                android:textSize="20dp"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/DressInfoFabricInput"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:text="Cotton"
                                android:textSize="20dp"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"/>



                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            >
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:text="Pattern :"
                                android:textSize="20dp"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/DressInfoPatternInput"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:text="Block"
                                android:textSize="20dp"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"/>



                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            >
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:text="Color :"
                                android:textSize="20dp"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/DressInfoColourInput"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:text="Red"
                                android:textSize="20dp"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"/>



                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            >
                            <TextView
                                android:id="@+id/DressInfoSleeveOutput"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:text="Sleeves :"
                                android:textSize="20dp"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/DressInfoSleeveInput"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:text="Full sleeve"
                                android:textSize="20dp"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"/>



                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    app:layout_constraintTop_toBottomOf="@id/DressInfo_ImageView"
                    android:layout_marginTop="560dp"
                    app:cardCornerRadius="20dp"
                    android:elevation="150dp"
                    android:translationZ="150dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/white"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp">

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="Rating and Review"
                                android:textSize="20dp" />

                            <Button
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="Rate Now"
                                android:textColor="@color/black"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/rounded_corners"
                                android:backgroundTint="#50CB93"
                                android:text="3.4"
                                android:textAlignment="center"
                                android:textSize="23dp"


                                />

                            <TextView
                                android:layout_width="250dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:text="3045 Ratings and 300 Reviews"
                                android:textSize="13dp" />


                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="25dp"
                            android:text="See all Reviews"
                            android:textAlignment="center"
                            android:textSize="20dp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>





            </androidx.constraintlayout.widget.ConstraintLayout>




        </ScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="100"
                >
                <Button
                    android:textColor="@color/white"
                    android:text="BUY"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/black"

                    />
                <Button
                    android:textColor="@color/white"
                    android:id="@+id/AddToCartBtn"
                    android:layout_weight="50"
                    android:layout_width="0dp"
                    android:text="ADD TO CART"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/black"
                    />

            </LinearLayout>


        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>






</FrameLayout>